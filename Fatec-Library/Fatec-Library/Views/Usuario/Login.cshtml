@model Fatec_Library.Models.Usuario

@{
    ViewData["Title"] = "Login";

    ViewBag.OcultarFooter = true;
}

@section Styles {
    <link rel="stylesheet" href="~/css/login-cadastro.css" />
}
<section class="vh-70">

    <div class="container py-5 h-100">

        <h1 class="text-center">Faça o seu Login</h1>

        <div class="row d-flex align-items-center justify-content-center h-80">

            <div class="col-md-8 col-lg-7 col-xl-6">

                <img src="~/assets/personagem-lendo-livros.png"
                     class="img-fluid" alt="Personagem Lendo um Livro">

            </div>

            <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">

                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                    <div data-mdb-input-init class="form-outline mb-4">
                        <label class="form-label" for="form1Example13">E-mail ou RA</label>
                        <input name="identificador" type="text" id="form1Example13" class="form-control form-control-lg border border-danger focus-ring focus-ring-danger py-1 px-2" />
                    </div>


                    <div data-mdb-input-init class="form-outline mb-4">
                        <label class="form-label" for="form1Example23">Senha</label>
                        <input name="Senha" type="password" id="form1Example23" class="form-control form-control-lg form-control-lg border border-danger focus-ring focus-ring-danger py-1 px-2" />
                    </div>

                    <div class="d-flex justify-content-end align-items-center mb-4">

                        <a href="#!">Esqueceu sua senha?</a>

                    </div>

                    <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-red btn-lg w-100 txt-white">Entrar</button>

                    <div class="text-center mt-3">

                        <p>Não tem uma conta? <a asp-area="" asp-controller="Usuario" asp-action="Cadastrar">Cadastra-se aqui</a></p>

                    </div>


                </form>

            </div>

        </div>

    </div>

</section>



@section Scripts {

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
