@model Fatec_Library.Models.Usuario

@{
    ViewData["Title"] = "Criar";
}

<h1>Criar</h1>

<h4>Usuario</h4>
<hr />

<div class="row">

    <div class="col-md-4">

        <form asp-action="Cadastrar">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Ra" class="control-label"></label>
                <input asp-for="Ra" class="form-control" />
                <span asp-validation-for="Ra" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            @* @Usando sem asp-for o campo Senha, pois no metodo "Cadastrar" do UsuarioController a senha esta sendo passada como paremetro e não como um atributo do objeto usuario.  *@
            <div class="form-group">
                <label asp-for="Senha" class="control-label"></label>
                <input asp-for="Senha" type="password" class="form-control" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="senhaConfirmar" class="control-label">Confirmar Senha</label>
                <input name="senhaConfirmar" class="form-control" />
                <span class="text-danger">@Html.ValidationMessage("senhaConfirmar")</span>
            </div>

            <input type="hidden" name="tipo" value="@ViewBag.tipo" />

            <div class="form-group">

                <input type="submit" value="Create" class="btn btn-primary" />

            </div>

            @if (ViewBag.FazerLogin != null)
            {

                <div class="alert alert-warning" role="alert">
                    Encotramos um Usuario com o mesmo E-mail/RA informado,
                    <a asp-area="" asp-controller="Usuario" asp-action="Login"> Clique Aqui para fazer o Login. </a>
                </div>
            }

        </form>
    </div>
</div>




@section Scripts {

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


