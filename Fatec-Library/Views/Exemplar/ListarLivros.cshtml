@model IEnumerable<Fatec_Library.Models.Livro>

@{
    ViewData["Title"] = "Novo Exemplar";
}

@if (User.IsInRole("Bibliotecaria"))
{

<h1 class="text-center">Novo Exemplar</h1>
<p class="text-center">Para adicionar exemplares, selecione um dos Livros abaixo.</p>

<p>
    <a asp-controller="Home" asp-action="Administracao" class="btn btn-red rounded-circle"> <i class="bi bi-arrow-left-circle"></i></a>
</p>


<table class="table table-light table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Editora)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ano_Publicacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Isbn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cdd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Idioma)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Num_Paginas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Capa_Livro)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Titulo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Editora)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ano_Publicacao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Isbn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cdd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pha)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Idioma)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Num_Paginas)
                </td>

                    <td>
                        <img src="~/@item.Capa_Livro" alt="Capa Livro" style="height: 150px;" />
                    </td>
              
                <td>
                    @Html.ActionLink("Selecionar", "Create", new { LivroId = item.Id }, new { @class = "btn btn-red" })
                </td>
            </tr>
        }
    </tbody>
</table>


}
else
{
    <div class="alert alert-danger text-center">
        <strong>Acesso Negado!</strong> Você não tem permissão para acessar esta página.

        <a asp-action="Index" asp-controller="Home" class="text-danger">Voltar para a página inicial</a>
    </div>
}