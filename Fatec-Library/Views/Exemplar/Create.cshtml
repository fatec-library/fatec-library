@model Fatec_Library.Models.Exemplar

@{
    ViewData["Title"] = "Create";
}

@if (User.IsInRole("Bibliotecaria"))
{
    <h1>Adicionar Exemplar</h1>

    <div class="row">
        <div class="col-md-4">

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label for="QuantidadeExemplares" class="control-label">Digite a Quantidade de Exemplares que serão adicionados</label>
                    <input type="number" name="QuantidadeExemplares" min="1" class="form-control" />
                </div>

                <div class="form-group">
                    <input asp-for="Livro_Id" type="hidden" value="@ViewBag.Livro.Id" />
                </div>

                <div class="row g-3 justify-content-center gap-2 col-md-12">
                    <input type="submit" value="Adicionar" class="btn btn-success col-md-4" />
                    <a class="btn btn-red col-md-4" asp-action="ListarLivros">Voltar à Lista</a>
                </div>
            </form>
        </div>
    </div>
}
else
{
    <div class="alert alert-danger text-center">
        <strong>Acesso Negado!</strong> Você não tem permissão para acessar esta página.

        <a asp-action="Index" asp-controller="Home" class="text-danger">Voltar para a página inicial</a>
    </div>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
