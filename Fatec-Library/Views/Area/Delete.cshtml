@model Fatec_Library.Models.Area

@{
    ViewData["Title"] = "Delete";
}

@if (User.IsInRole("Bibliotecaria"))
{

<h1>Deletar Área</h1>

<h3>Tem certeza que deseja Deletar?</h3>

<div>
    <dl class="row mb-3">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descritivo)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descritivo)
        </dd>

    </dl>

    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" />

        <a asp-action="Listar">Voltar para Lista</a>
    </form>

</div>

}
else
{
<div class="alert alert-danger text-center">
    <strong>Acesso Negado!</strong> Você não tem permissão para acessar esta página.

    <a asp-action="Index" asp-controller="Home" class="text-danger">Voltar para a página inicial</a>
</div>
}