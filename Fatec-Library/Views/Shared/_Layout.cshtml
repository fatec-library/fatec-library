<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fatec Library</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">

    <link rel="icon" type="image/png" href="~/assets/logo-fatec-library-sem-texto.png" />


    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Fatec_Library.styles.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>

<body>

    <header>

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-header-color border-bottom box-shadow mt-2 mb-3">

            <div class="container-fluid">

                <button class="navbar-toggler bg-danger" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">

                    <span class="navbar-toggler-icon"></span>

                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item ">

                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>

                        </li>

                        <li class="nav-item ">

                            <a class="nav-link text-light" asp-area="" asp-controller="Livro" asp-action="Acervo">Acervo</a>

                        </li>

                        <li class="nav-item ">

                            <a class="nav-link text-light" asp-area="" asp-controller="Livro" asp-action="BuscarNoAcervo">Buscar</a>

                        </li>

                        <partial name="_loginBibliotecaria.cshtml" />

                    </ul>

                    <ul class="navbar-nav ms-auto">
                        @{
                            if (User?.Identity?.IsAuthenticated ?? false)
                            {

                                <li class="nav-item">

                                @using Fatec_Library.Helpers
                                    @{
                                        var nomeUsuario = User.Identity?.Name ?? "U";
                                        var inicial = nomeUsuario.Substring(0, 1).ToUpper();
                                        var cor = AvatarHelper.BackgroundColor(nomeUsuario);
                                    }

                                    <a class="text-decoration-none pr-2" asp-controller="Usuario" asp-action="Perfil" asp-route-usuarioid="@User.FindFirst("UsuarioId")?.Value" data-bs-toggle="tooltip" data-bs-placement="bottom" data-bs-title="Ver perfil">

                                        <span class="rounded-circle d-flex justify-content-center align-items-center" style="width: 40px; height: 40px; background-color: @cor; color: white; font-weight: bold;">
                                            @inicial
                                        </span>

                                    </a>

                                </li>

                                <li class="nav-item">

                                    <a class="nav-link text-light" asp-area="" asp-controller="Usuario" asp-action="Logout">Sair</a>

                                </li>
                            }
                            else
                            {
                                <li class="nav-item">

                                    <a class="nav-link" asp-area="" asp-controller="Usuario" asp-action="Login">

                                        <button data-mdb-ripple-init type="button" class="btn btn-link text-light">

                                            Entrar

                                        </button>

                                    </a>

                                </li>

                                <li class="nav-item">

                                    <a class="nav-link " asp-area="" asp-controller="Usuario" asp-action="Cadastrar" asp-route-tiponome="Aluno">
                                        <button data-mdb-ripple-init type="button" class="btn btn-red border-white text-light ">

                                            Criar Conta

                                        </button>
                                    </a>

                                </li>

                            }
                        }
                    </ul>

                </div>

            </div>

        </nav>

    </header>

    <div class="container">

        <main role="main" class="pb-3">

            @RenderBody()

        </main>

    </div>

    @if (!(ViewBag.OcultarFooter ?? false))
    {

        <footer class="footer-color text-white text-center text-lg-start">

            <div class="container p-4">

                <div class="row">

                    <!--Grid column-->
                    <div class="col-lg-6 col-md-12 mb-4 mb-md-0">

                        <h5 class="text-uppercase">Fatec Library</h5>

                        <p class="mb-3">
                            Fatec Library é um Sistema de Gestão do Acervo da Biblioteca desenvolvido para facilitar o acesso à informação. Através dele, é possível realizar consultas ao acervo da biblioteca da Fatec Jahu de forma rápida e prática, permitindo que alunos, professores e demais usuários encontrem facilmente os materiais disponíveis na biblioteca.
                        </p>

                        <h5 class="text-uppercase">Nosso Endereço</h5>

                        <div class="ratio ratio-21x9 " style=" --bs-aspect-ratio: 30%;">
                            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d461.37976134744133!2d-48.54820172331351!3d-22.31439914067498!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x94c7583ac8032c15%3A0xd3db07d9284a5cb2!2sFaculdade%20de%20Tecnologia%20de%20Jahu!5e0!3m2!1spt-BR!2sbr!4v1748196912502!5m2!1spt-BR!2sbr" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                        </div>

                    </div>
                    <!--Grid column-->
                    <!--Grid column-->
                    <div class="col-lg-3 col-md-6 mb-4 mb-md-0">

                        <h5 class="text-uppercase">Links</h5>

                        <ul class="list-unstyled mb-0">

                            <li class="nav-item ">

                                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>

                            </li>

                            <li class="nav-item ">

                                <a class="nav-link text-light" asp-area="" asp-controller="Livro" asp-action="Acervo">Acervo</a>

                            </li>

                            <li class="nav-item ">

                                <a class="nav-link text-light" asp-area="" asp-controller="Livro" asp-action="BuscarNoAcervo">Buscar</a>

                            </li>

                        </ul>
                    </div>
                    <!--Grid column-->
                    <!--Grid column-->
                    <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
                        <h5 class="text-uppercase mb-0">Nossas Redes Sociais </h5>

                        <section class="mb-4">
                            <!-- Facebook -->
                            <a data-mdb-ripple-init
                               class="btn btn-light btn-floating btn-lg text-body m-1"
                               href="http://facebook.com/fatecjahu"
                               role="button"
                               data-mdb-ripple-color="dark">
                                <i class="bi bi-facebook"></i>
                            </a>

                            <!-- Youtube -->
                            <a data-mdb-ripple-init
                               class="btn btn-light btn-floating btn-lg text-body m-1"
                               href="https://www.youtube.com/user/fatecdejau"
                               role="button"
                               data-mdb-ripple-color="dark">
                                <i class="bi bi-youtube"></i>
                            </a>

                            <!-- Instagram -->
                            <a data-mdb-ripple-init
                               class="btn btn-light btn-floating btn-lg text-body m-1"
                               href="https://www.instagram.com/fatecjahu"
                               role="button"
                               data-mdb-ripple-color="dark">
                                <i class="bi bi-instagram"></i>
                            </a>

                            <!-- Linkedin -->
                            <a data-mdb-ripple-init
                               class="btn btn-light btn-floating btn-lg text-body m-1"
                               href="https://www.linkedin.com/company/faculdade-de-tecnologia-de-jahu/posts/?feedView=all"
                               role="button"
                               data-mdb-ripple-color="dark">
                                <i class="bi bi-linkedin"></i>
                            </a>

                            <!-- Github -->
                            <a data-mdb-ripple-init
                               class="btn btn-light btn-floating btn-lg text-body m-1"
                               href="https://github.com/fatec-library"
                               role="button"
                               data-mdb-ripple-color="dark">
                                <i class="bi bi-github"></i>
                            </a>
                        </section>
                    </div>
                    <!--Grid column-->

                </div>
                <!--Grid row-->

            </div>
            <!-- Grid container -->
            <!-- Copyright -->
            <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
                © 2025 Copyright:
                <a class="text-white" href="https://fatecjahu.edu.br/">Fatec Library</a>
            </div>
            <!-- Copyright -->
        </footer>

    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Ativa todos os tooltips da página
        document.addEventListener('DOMContentLoaded', function () {
          var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
          var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
          })
        });
    </script>


    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
